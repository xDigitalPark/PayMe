<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_debt_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".create.ui.CreateDebtActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_create_debt_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/activity_create_debt_select_contact_title"
        android:id="@+id/activity_create_debt_username"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:textColor="#10a2d3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="S/."
        android:id="@+id/textView4"
        android:layout_below="@+id/activity_create_debt_radiogroup"
        android:layout_alignRight="@+id/activity_create_debt_avatar"
        android:layout_alignEnd="@+id/activity_create_debt_avatar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="00.00"
        android:id="@+id/activity_create_debt_total"
        android:layout_below="@+id/activity_create_debt_radiogroup"
        android:layout_alignLeft="@+id/activity_create_debt_radiogroup"
        android:layout_alignStart="@+id/activity_create_debt_radiogroup" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_debt_avatar"
        android:layout_alignLeft="@+id/activity_create_debt_username"
        android:layout_alignStart="@+id/activity_create_debt_username"
        android:id="@+id/activity_create_debt_radiogroup"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Me debe"
            android:id="@+id/activity_create_debt_not_mine"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Le debo"
            android:id="@+id/activity_create_debt_mine"
            android:checked="false" />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Detalle"
        android:ems="10"
        android:id="@+id/activity_create_debt_concept"
        android:layout_below="@+id/activity_create_debt_total"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hoy"
        android:id="@+id/activity_create_debt_date"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/activity_create_debt_concept"
        android:layout_alignLeft="@+id/activity_create_debt_total"
        android:layout_alignStart="@+id/activity_create_debt_total"
        android:textColor="#10a2d3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/activity_create_debt_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
