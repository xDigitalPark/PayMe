<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/debt_item_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fragment_balance_item_name_edittext"
        android:textSize="@dimen/debt_text_size"
        android:fontFamily="sans-serif-medium"
        android:textColor="#010101"
        android:layout_alignTop="@+id/fragment_balance_item_total_edittext"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fragment_balance_item_total_edittext"
        android:layout_gravity="right"
        android:textSize="@dimen/debt_text_size"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TE DEBE :"
        android:textSize="@dimen/debt_small_text_size"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/fragment_balance_mytotal_edittext"
        android:textColor="@color/positiveDebt"
        android:layout_below="@+id/fragment_balance_item_name_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TE DEBE :"
        android:textSize="@dimen/debt_small_text_size"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/negativeDebt"
        android:id="@+id/fragment_balance_party_total_edittext"
        android:layout_below="@+id/fragment_balance_item_name_edittext"
        android:layout_toRightOf="@+id/fragment_balance_mytotal_edittext"
        android:layout_toEndOf="@+id/fragment_balance_mytotal_edittext" />

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@android:color/darker_gray"
         android:layout_alignParentBottom="true"
         android:layout_marginTop="5dp" />-->

</RelativeLayout>