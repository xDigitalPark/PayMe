<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/listBackground"
    android:layout_height="match_parent"
    tools:context="apps.digitakpark.payapp.payments.ui.PaymentActivity"
        tools:showIn="@layout/activity_payment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="@color/totalBackground"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/payment_activity_concept_edittext"
            android:textSize="@dimen/debt_text_size"
            android:fontFamily="sans-serif-medium"
            android:textColor="#010101"
            android:layout_alignTop="@+id/payment_activity_total_edittext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/payment_activity_total_edittext"
            android:layout_gravity="right"
            android:textSize="@dimen/debt_text_size"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/payment_activity_item_date_limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/payment_activity_total_edittext"
            android:fontFamily="sans-serif-medium"
            android:text="19 ENE 17"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/debt_date_text_size"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/activity_debt_detail_item_date_limit_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/payment_activity_total_edittext"
            android:layout_toLeftOf="@+id/payment_activity_item_date_limit_text"
            android:layout_toStartOf="@+id/payment_activity_item_date_limit_text"
            android:background="@drawable/ic_notifications_black_24dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/payment_activity_item_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/payment_activity_concept_edittext"
            android:fontFamily="sans-serif-medium"
            android:text="19 ENE 17"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/debt_date_text_size" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/payment_activity_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/relativeLayout" />
    <TextView
        android:id="@+id/payments_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_hay_pagos_click" />

</RelativeLayout>


